{%- block pager_widget -%}
    <nav class="pagination">

        {% if pagerfanta.getNbPages() > 1 %}
        <div class="pagination-buttons">

            {%- if pagerfanta.hasPreviousPage() -%}
                {%- set path = route_generator.route(pagerfanta.getPreviousPage()) -%}
                {%- set page = pagerfanta.getPreviousPage() -%}
                <a class="button button--secondary button--icon"
                   href="{{- path -}}"
                   rel="prev"
                   title="Previous Page"
                   data-controller="scroll-to"
                   data-action="live#update:prevent data-table#scrollToTop:prevent"
                   data-model="page"
                   data-value="{{ page }}"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20"><path d="M576-240 336-480l240-240 51 51-189 189 189 189-51 51Z"/></svg>
                </a>
            {%- else -%}
                <span class="button button--secondary button--icon" aria-disabled="true" title="Previous Page">
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20"><path d="M576-240 336-480l240-240 51 51-189 189 189 189-51 51Z"/></svg>                </a>
                </span>
            {%- endif -%}

            {%- if pagerfanta.hasNextPage() -%}
                {%- set path = route_generator.route(pagerfanta.getNextPage()) -%}
                {%- set page = pagerfanta.getNextPage() -%}
                <a class="button button--secondary button--icon"
                   href="{{- path -}}"
                   rel="next"
                   title="Next Page"
                   data-controller="scroll-to"
                   data-action="live#update:prevent data-table#scrollToTop:prevent"
                   data-model="page"
                   data-value="{{ page }}"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20"><path d="M522-480 333-669l51-51 240 240-240 240-51-51 189-189Z"/></svg>
                </a>
            {%- else -%}
                <span class="button button--secondary button--icon" aria-disabled="true" title="Next Page">
                    <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20"><path d="M522-480 333-669l51-51 240 240-240 240-51-51 189-189Z"/></svg>
                </span>
            {%- endif -%}

        </div>
        {% endif %}

        <span class="pagination-results">
            {% if pagerfanta.getNbPages() > 1 %}
            {{ pagerfanta.currentPageOffsetStart }} &dash; {{ pagerfanta.currentPageOffsetEnd }} of
            {% endif %}
            {{ pagerfanta.nbResults }} {{ pagerfanta.nbResults == 1 ? 'result' : 'results' }}
        </span>
    </nav>
{%- endblock pager_widget -%}
