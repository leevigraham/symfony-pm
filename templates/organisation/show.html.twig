{% set formId = 'editForm' %}
{% embed '_embed/show.html.twig' with {
    editUrl: path('app_organisation_edit', {'id': organisation.id}),
    deleteForm: include('organisation/_delete_form.html.twig'),
    breadcrumbList: {
        'Home': path('app_dashboard'),
        'Organisations': path('app_organisation_index'),
    }
} %}
    {% block content %}
        <div class="panel">
            <table>
                <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ organisation.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Name</th>
                    <td>{{ organisation.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ organisation.description }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {% endblock %}
{% endembed %}
