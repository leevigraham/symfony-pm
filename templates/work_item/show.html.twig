{% set formId = 'editForm' %}
{% embed '_embed/show.html.twig' with {
    editUrl: path('app_work_item_edit', {key: work_item.key}),
    deleteForm: include('work_item/_delete_form.html.twig'),
    breadcrumbList: {
        'Home': path('app_dashboard'),
        'Work Items': path('app_work_item_index'),
    }
} %}
    {% block content %}
        <div class="panel">
            <table>
                <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ work_item.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Project</th>
                    <td>{{ include('project/_chip.html.twig', {project: work_item.project}) }}</td>
                </tr>
                <tr>
                    <th scope="row">Key</th>
                    <td class="code">{{ work_item.key }}</td>
                </tr>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ work_item.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Priority</th>
                    <td>{{ work_item.priority.value|default }}</td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td>{{ work_item.status.value|default }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ work_item.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Original Estimate</th>
                    <td class="code">{{ work_item.originalEstimateInSeconds|seconds_to_human }}</td>
                </tr>
                <tr>
                    <th scope="row">Remaining Estimate</th>
                    <td class="code">{{ work_item.remainingEstimateInSeconds|seconds_to_human }}</td>
                </tr>
                <tr>
                    <th scope="row">Time Spent</th>
                    <td class="code">{{ work_item.timeSpentInSeconds|seconds_to_human }}</td>
                </tr>
                <tr>
                    <th scope="row">Import Key</th>
                    <td class="code">{{ work_item.importKey }}</td>
                </tr>
                <tr>
                    <th scope="row">Parent</th>
                    <td>
                        {{ work_item.parentWorkItem ? include('work_item/_chip.html.twig', {work_item: work_item.parentWorkItem}) }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <h2>Sub Work Items</h2>
        {{ component('DataTable:WorkItem', { parentId: work_item.id }) }}
        <h2>Work Logs</h2>
        {{ component('DataTable:WorkLog', { workItemId: work_item.id }) }}
    {% endblock %}
{% endembed %}
